@page
@model WebApp.Pages.SavedGames.CreateModel

@{
    ViewData["Title"] = "Save this Battle in Memories";
}

<h1>Save this Battle in Memories</h1>

<h4>Save Battle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SavedGame.SavedGameName" class="control-label">Enter Battle Name</label>
                <input asp-for="SavedGame.SavedGameName" class="form-control" />
                <span asp-validation-for="SavedGame.SavedGameName" class="text-danger"></span>
            </div>
            <div class="form-group">
                            <label asp-for="SavedGame.SerializedSavedGameData" class="control-label"></label>
                            <input type="hidden" asp-for="SavedGame.SerializedSavedGameData" class="form-control" />
                            <span asp-validation-for="SavedGame.SerializedSavedGameData" class="text-danger"></span>
                        </div>
            <div class="form-group">
                            <label asp-for="SavedGame.DateTime" class="control-label"></label>
                            <input type="hidden" asp-for="SavedGame.DateTime" class="form-control" />
                            <span asp-validation-for="SavedGame.DateTime" class="text-danger"></span>
                        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to Saved Battles</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
