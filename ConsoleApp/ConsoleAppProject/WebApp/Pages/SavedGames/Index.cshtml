@page
@model WebApp.Pages.SavedGames.IndexModel

@{
    ViewData["Title"] = "Saved Battles";
}

<h1>Saved Battles</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Date, Time
            </th>
            <th>
                Battle Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SavedGame) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SavedGameName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SavedGameId">Change</a> |
                <a asp-page="./Delete" asp-route-id="@item.SavedGameId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
