@page
@model WebApp.Pages.Expenses.CreateModel

@{
    ViewData["Title"] = "Add Maintenace Costs";
}

<h4>Add Maintenance Costs</h4>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Expense.CarId" class="control-label">Car Model</label>
                <select asp-for="Expense.CarId" class="form-control" asp-items="ViewBag.CarId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Expense.DateTime" class="control-label">Date/Time (yyyy-MM-dd HH:mm)</label>
                <input asp-for="Expense.DateTime" class="form-control" asp-format="{0:yyyy-MM-ddTHH:mm}"/>
                <span asp-validation-for="Expense.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Description" class="control-label"></label>
                <input asp-for="Expense.Description" class="form-control"/>
                <span asp-validation-for="Expense.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.CategoryId" class="control-label">Category</label>
                <select asp-for="Expense.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <a asp-route-id="@Model.Id" asp-page="/Categories/CreateFmExpense">Add New Category</a>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Price" class="control-label">Price (EUR)</label>
                <input asp-for="Expense.Price" class="form-control"/>
                <span asp-validation-for="Expense.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-id=@Model.Id asp-page="Index">Back to Mantenance Costs</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}