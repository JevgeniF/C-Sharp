@page
@model WebApp.Pages.Marks.EditModel

@{
    ViewData["Title"] = "Edit Mark";
}

<h4>Edit Mark</h4>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mark.Id"/>
            <div class="form-group">
                <label asp-for="Mark.Name" class="control-label"></label>
                <input asp-for="Mark.Name" class="form-control"/>
                <span asp-validation-for="Mark.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to Marks</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}