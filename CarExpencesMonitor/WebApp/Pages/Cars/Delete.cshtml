@page
@model WebApp.Pages.Cars.DeleteModel

@{
    ViewData["Title"] = "Delete Car";
}

<h4>Delete This Car</h4>

<div>
    <h4>Car</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Mark)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Mark.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class="col-sm-2">
            Y.O.B.
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.YearOfBuilt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.RegNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.RegNumber)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Car.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index">Back to Cars</a>
    </form>
    @if (Model.Car.ImageUrl != null)
    {
        <div>
            <img src="@Url.Content(Model.Car.ImageUrl)" alt="car image">
        </div>
    }
</div>